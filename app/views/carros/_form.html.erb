<br><br>
<%= form_with(model: carro, local: true) do |form| %>
<div class="container">
    <% if @carro.errors.any? %>
    <div class="alert alert-danger" id="notice">
        <p id="texto">
            Tienes <%= pluralize(@carro.errors.count, "errores por favor revisa los campos") %>
        </p>
    </div>
    <%end%>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-5">
                        <%= form.label :reprobo, 'Reportado como robado: ' %>
                    </div>
                    <div class="col-2">
                        <%= form.radio_button :reprobo ,'false',class: 'form-check-input'%>
                        <%= form.label :reprobo , 'NO',class: 'form-check-label'%>
                    </div>
                    <div class="col-5">
                        <%= form.radio_button :reprobo,'true' ,class: 'form-check-input'%>
                        <%= form.label :reprobo , 'SI',class: 'form-check-label'%>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <%= form.label :marca_car, 'Marca de carro: ' %>
                <%= form.text_field :marca_car ,class: 'form-control'%>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <%= form.label :modelo_car , 'Modelo de carro: '%>
                <%= form.text_field :modelo_car ,class: 'form-control'%>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <%= form.label :matricula %>
                <%= form.text_field :matricula ,class: 'form-control'%>
            </div>
        </div>
    </div>
    <div class="botones">
        <div class="boton">
            <%= link_to 'Cancelar', carros_path, class: "btn btn-lg btn-danger" %>
        </div>
        <div class="boton">
            <%= form.submit 'Agregar',class: "btn btn-lg btn-success"%>
        </div>
    </div>
</div>
</div>
<% end %>